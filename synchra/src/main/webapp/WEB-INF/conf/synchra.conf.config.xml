<?xml version="1.0" encoding="utf-8"?>

<application xmlns:config="http://www.top-logic.com/ns/config/6.0">
	<services>
		<config service-class="com.top_logic.basic.util.ResourcesModule">
			<instance>
				<bundles>
					<bundle name="synchra.app-messages" />
            		<bundle name="model.synchra.messages"/>
            		<bundle name="model.synchra.Bom.messages"/>
            		<bundle name="model.synchra.Problemmanagement.messages"/>
            		<bundle name="model.synchra.Riskmanagement.messages"/>
            		<bundle name="model.synchra.Changemanagement.messages"/>
            		<bundle name="model.synchra.Vendormanagement.messages"/>
            		<bundle name="model.fma.messages"/>
            		<bundle name="model.risk.messages"/>
				</bundles>
			</instance>
		</config>
		
		<config service-class="com.top_logic.knowledge.service.migration.MigrationService">
			<instance>
				<modules>
					<module name="synchra" />
				</modules>
			</instance>
		</config>
	    <config service-class="com.top_logic.util.model.ModelService">
	      <instance class="com.top_logic.element.model.DynamicModelService">
	        <declarations>
	          <declaration file="/WEB-INF/model/synchra.model.xml"/>
	          <declaration file="/WEB-INF/model/synchra.Bom.model.xml"/>
	          <declaration file="/WEB-INF/model/synchra.Problemmanagement.model.xml"/>
	          <declaration file="/WEB-INF/model/synchra.Riskmanagement.model.xml"/>
	          <declaration file="/WEB-INF/model/synchra.Changemanagement.model.xml"/>
	          <declaration file="/WEB-INF/model/synchra.Vendormanagement.model.xml"/>
	          <declaration file="/WEB-INF/model/fma.model.xml"/>
	          <declaration file="/WEB-INF/model/risk.model.xml"/>
	        </declarations>
	       <settings>
				<module name="risk">
					<factory value="com.top_logic.synchra.risk.RiskFactory"/>
				</module>
				<module name="fma">
					<factory value="com.top_logic.synchra.model.ModelFactory"/>
				</module>
	        </settings>
	      </instance>
	    </config>
	</services>

	<configs>
		<config config:interface="com.top_logic.basic.db.schema.setup.config.ApplicationTypes">
			<type-systems>
				<type-system name="Default">
					<declarations>
						<declaration resource="webinf://kbase/synchraMeta.xml" />
					</declarations>
				</type-system>
			</type-systems>
		</config>
	</configs>
</application>