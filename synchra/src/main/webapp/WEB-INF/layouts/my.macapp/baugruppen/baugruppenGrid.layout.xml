<?xml version="1.0" encoding="utf-8" ?>

<config:template-call
	xmlns:config="http://www.top-logic.com/ns/config/6.0"
	final="true"
	template="com.top_logic.element/treegrid.template.xml"
>
	<arguments
		defaultColumns="name,partName,parts,price,weight"
		rootVisible="false"
		type="PDX.Bom:LibraryNode,PDX.Bom:Component,PDX.Bom:ConstructionPart"
	>
		<name key="dynamic.44083710-9980-4dfa-ac19-ac5a399ff3c2">
			<de>Baugruppen</de>
		</name>
		<modelBuilder class="com.top_logic.model.search.providers.TreeModelByExpression"
			nodePredicate="node->$node.instanceOf(`PDX.Bom:LibraryNode`) || $node.instanceOf(`PDX.Bom:Component`) || $node.instanceOf(`PDX.Bom:ConstructionPart`)"
			parents="node->$node.container()"
			rootNode="`PDX.Bom#ASSEMBLIES`"
		>
			<children><![CDATA[
      node -> switch {
      $node.instanceOf(`PDX.Bom:Structure`): $node.get(`PDX.Bom:Structure#contents`);
      $node.instanceOf(`PDX.Bom:Chapter`): $node.get(`PDX.Bom:Chapter#defines`).filter(elt->$elt.instanceOf(`PDX.Bom:Composition`));
      $node.instanceOf(`PDX.Bom:Composition`): $node.get(`PDX.Bom:Composition#parts`);
      }
    ]]></children>
		</modelBuilder>
		<buttons>
			<button id="exportExcelGrid"
				class="com.top_logic.layout.table.export.StreamingExcelExportHandler"
			/>
			<button id="createNewRow"
				class="com.top_logic.model.search.providers.GridCreateHandlerByExpression"
				createContext="model -> $model"
				disabledImage="colored:tl-icon plus"
				image="colored:tl-icon plus"
				initOperation="createContext -> newObject -> target -> $createContext.add(`PDX.Bom:Structure#contents`, $newObject)"
				target="selection(self())"
			>
				<resourceKey key="dynamic.80261595-6ee4-4cff-a227-ceee2df24654">
					<en>New row</en>
					<de>Neue Strukturzeile</de>
				</resourceKey>
				<checkScopeProvider/>
				<type-options class="com.top_logic.element.layout.create.AttributeBasedCreateTypeOptions"
					attribute="PDX.Bom:Structure#contents"
					owner="PDX.Bom:LibraryNode"
				/>
			</button>
			<button id="ID_6e659e2b_659d_4e4c_af5b_0d4f16dfbdbd"
				class="com.top_logic.model.search.providers.GridCreateHandlerByExpression"
				createContext="model -> $model"
				disabledImage="colored:tl-icon hierarchy"
				image="colored:tl-icon hierarchy"
				initOperation="ctx->obj->model->$ctx.add(`PDX.Bom:Chapter#defines`, $obj)"
				target="selection(self())"
			>
				<resourceKey key="dynamic.9cbdc589-eb8a-4e3e-bec0-2546edceef03">
					<en>New row</en>
					<de>Neue Baugruppe</de>
				</resourceKey>
				<executability>
					<rule-by-expression show-disabled="true">
						<decision>tgt-&gt;if($tgt.instanceOf(`PDX.Bom:Chapter`), true, #("Kein Kapitel ausgewählt"@de,"No chapter selected"@en))</decision>
					</rule-by-expression>
				</executability>
				<checkScopeProvider/>
				<type-options type="PDX.Bom:Composition"/>
			</button>
			<button id="ID_17320f59_ec46_4743_a28e_8bef4943afeb"
				class="com.top_logic.layout.component.GenericDeleteCommandHandler"
				target="selection(self())"
			/>
			<button id="ID_f6f14c18_906b_430f_b0c5_8540702bf30d"
				class="com.top_logic.model.search.providers.GridCreateHandlerByExpression"
				createContext="model -> $model"
				initOperation="ctx->obj->model->$ctx.add(`PDX.Bom:Composition#parts`, $obj)"
				target="selection(self())"
			>
				<resourceKey key="dynamic.b5966720-f904-484f-8395-39307777612f">
					<en>New row</en>
					<de>Neue Teileverwendung</de>
				</resourceKey>
				<executability>
					<rule-by-expression>
						<decision>tgt-&gt;if($tgt.instanceOf(`PDX.Bom:Composition`), true, #("Keine Baugruppe ausgewählt"@de,"No composition selected"@en))</decision>
					</rule-by-expression>
				</executability>
				<checkScopeProvider/>
				<type-options type="PDX.Bom:ConstructionPart"/>
			</button>
			<button id="ID_bfd2a0ed_d584_4fda_8fae_37fed14655da"
				class="com.top_logic.layout.form.component.InvalidateCommand"
			/>
		</buttons>
		<dialogs>
			<layout-reference resource="my.macapp/baugruppen/detailsOf/dialog.layout.xml"/>
		</dialogs>
	</arguments>
</config:template-call>