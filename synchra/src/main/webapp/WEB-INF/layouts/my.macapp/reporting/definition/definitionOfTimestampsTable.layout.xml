<?xml version="1.0" encoding="utf-8" ?>

<config:template-call
	xmlns:config="http://www.top-logic.com/ns/config/6.0"
	final="true"
	template="com.top_logic/table.template.xml"
>
	<arguments
		defaultColumns="_actions,dateOfReport,revisions,name"
		type="PDX.Report:Report"
	>
		<dialogs>
			<layout-reference resource="my.macapp/reporting/definition/createObject/dialog.layout.xml"/>
			<layout-reference resource="my.macapp/reporting/definition/properties/dialog.layout.xml"/>
		</dialogs>
		<name key="dynamic.d93c0a35-03e3-4a7a-b7eb-c5c16e673d31">
			<en>Definition of Timestamps</en>
			<de>Definition der Zeitpunkte</de>
		</name>
		<modelBuilder class="com.top_logic.model.search.providers.ListModelByExpression"
			elements="model->all(`PDX.Report:Report`)"
			supportsElement="element->$element.instanceOf(`PDX.Report:Report`)"
		/>
		<configurationProviders>
			<configurationProvider class="com.top_logic.layout.table.provider.ButtonColumnProvider"
				columnId="_actions"
				columnLabel="class.com.top_logic.layout.editor.I18NConstants.DYNAMIC_COMPONENT.com.top_logic.model.search.tableWithDialogs.template.defaults.buttonColumn"
				width="40px"
			>
				<buttons>
					<button id="openEditDialog"
						class="com.top_logic.tool.boundsec.OpenModalDialogCommandHandler"
						dialog-name="my.macapp/reporting/definition/properties/dialog.layout.xml#Dialog"
						group="Write"
						image="theme:ICONS_BUTTON_EDIT"
						resourceKey="class.com.top_logic.layout.editor.I18NConstants.DYNAMIC_COMPONENT.com.top_logic.model.search.tableWithDialogs.template.defaults.edit"
						targetComponent="my.macapp/reporting/definition/properties/properties_Form_Form.layout.xml#Form"
					>
						<executability>
							<rule class="com.top_logic.tool.execution.InViewModeExecutable"/>
						</executability>
						<postCreateActions>
							<setEditMode>
								<target name="my.macapp/reporting/definition/properties/properties_Form_Form.layout.xml#Form"/>
							</setEditMode>
						</postCreateActions>
					</button>
				</buttons>
			</configurationProvider>
		</configurationProviders>
		<buttons>
			<button id="exportExcel"
				class="com.top_logic.layout.table.export.ExcelExportHandler"
			/>
			<button id="deleteRow"
				class="com.top_logic.layout.component.GenericDeleteCommandHandler"
				target="selection(self())"
			/>
		</buttons>
	</arguments>
</config:template-call>