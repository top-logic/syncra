<config:template-call
	xmlns:config="http://www.top-logic.com/ns/config/6.0"
	final="true"
	template="com.top_logic.element/grid.template.xml"
>
	<arguments
		defaultColumns="description,pStatus,solution,name,affects,remarkKoordination,remarkDevelopment,remarkManagement,allTokens,activeTokens,collaboration,process,userRelevantTokens,durationInMinutes,createdBy,createdByContact,executionState,executionNumber"
