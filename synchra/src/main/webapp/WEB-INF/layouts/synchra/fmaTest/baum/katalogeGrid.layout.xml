<?xml version="1.0" encoding="utf-8" ?>

<config:template-call
	xmlns:config="http://www.top-logic.com/ns/config/6.0"
	template="com.top_logic.element/treegrid.template.xml"
>
	<arguments
		defaultColumns="name,componentID,material,price,company"
		defaultSelection="false"
		rootVisible="false"
		type="syn:PartCatalog,syn:SinglePart"
	>
		<name key="dynamic.11a9f4d4-ab1a-4368-a6e8-0c8dfc54c709">
			<de>Kataloge</de>
		</name>
		<modelBuilder class="com.top_logic.model.search.providers.TreeModelByExpression"
			leafPredicate="node->$node.instanceOf(`syn:SinglePart`)"
			nodePredicate="node->$node.instanceOf(`syn:PartCatalog`) or $node.instanceOf(`syn:SinglePart`)"
			rootNode="`synchra.Bom#LIBRARIES`"
		>
			<children><![CDATA[node -> switch {
    $node.instanceOf(`synchra.Bom:Libraries`): all(`syn:PartCatalog`);
    $node.instanceOf(`syn:PartCatalog`):$node.get(`syn:PartCatalog#parts`);
}]]></children>
			<parents><![CDATA[node -> switch {
    $node.instanceOf(`synchra.Bom:Libraries`): null;
    $node.instanceOf(`syn:PartCatalog`):`synchra.Bom#LIBRARIES`;
    $node.instanceOf(`syn:SinglePart`):$node.container();
}]]></parents>
		</modelBuilder>
		<buttons>
			<button id="exportExcelGrid"
				class="com.top_logic.layout.table.export.StreamingExcelExportHandler"
			/>
			<button id="createNewRow"
				class="com.top_logic.model.search.providers.GridCreateHandlerByExpression"
				createContext="model -> $model"
				initOperation="createContext -> newObject -> target -> $createContext.add(`syn:PartCatalog#parts`, $newObject)"
				target="selection(self())"
			>
				<checkScopeProvider/>
				<type-options class="com.top_logic.element.layout.create.AttributeBasedCreateTypeOptions"
					attribute="syn:PartCatalog#parts"
					owner="syn:PartCatalog"
				/>
			</button>
			<button id="importCatalogs"
				class="com.top_logic.synchra.util.OpenImportCatalogsDialog"
				executability="InViewMode"
				group="Write"
				image="css:fa-solid fa-file-import"
			>
				<resourceKey key="dynamic.659fe5c1-02b9-4560-9146-31e154fe76b9">
					<en>Import data</en>
					<de>Daten importieren</de>
				</resourceKey>
				<importers>
					<importer
						id-attributes="name"
						tl-class="kpi:Kpi"
					>
						<attributes>
							<attribute class="com.top_logic.synchra.importer.attribute.PropertyImport"
								name="kpi:Kpi#name"
							/>
							<attribute class="com.top_logic.synchra.importer.attribute.ReferenceImport"
								name="kpi:Kpi#unit"
							>
								<value-transformer class="com.top_logic.synchra.importer.transformer.TLObjectTransformer"
									id-attribute="name"
									tl-class="tl.units:AbstractUnit"
								/>
							</attribute>
						</attributes>
					</importer>
					<importer
						id-attributes="name"
						tl-class="syn:Material"
					>
						<attributes>
							<attribute class="com.top_logic.synchra.importer.attribute.PropertyImport"
								name="syn:Material#name"
							/>
						</attributes>
					</importer>
					<importer
						id-attributes="name"
						tl-class="syn:PartCatalog"
					>
						<attributes>
							<attribute class="com.top_logic.synchra.importer.attribute.PropertyImport"
								name="syn:PartCatalog#name"
							/>
						</attributes>
					</importer>
					<importer
						id-attributes="name"
						tl-class="syn:Company"
					>
						<attributes>
							<attribute class="com.top_logic.synchra.importer.attribute.PropertyImport"
								name="syn:Company#name"
							/>
							<attribute class="com.top_logic.synchra.importer.attribute.PropertyImport"
								name="syn:Company#contactPerson"
							/>
							<attribute class="com.top_logic.synchra.importer.attribute.PropertyImport"
								name="syn:Company#phone"
							/>
							<attribute class="com.top_logic.synchra.importer.attribute.ReferenceImport"
								name="syn:Company#structure"
							>
								<value-transformer class="com.top_logic.synchra.importer.transformer.TLEnumerationTransformer"
									enumeration="syn:CompanyStructure"
								/>
							</attribute>
						</attributes>
					</importer>
					<importer
						id-attributes="name"
						tl-class="syn:SinglePart"
					>
						<attributes>
							<attribute class="com.top_logic.synchra.importer.attribute.PropertyImport"
								name="syn:SinglePart#name"
							/>
							<attribute class="com.top_logic.synchra.importer.attribute.PropertyImport"
								name="syn:SinglePart#price"
							/>
							<attribute class="com.top_logic.synchra.importer.attribute.ReferenceImport"
								name="syn:SinglePart#material"
							>
								<value-transformer class="com.top_logic.synchra.importer.transformer.TLObjectTransformer"
									id-attribute="name"
									tl-class="syn:Material"
								/>
							</attribute>
							<attribute class="com.top_logic.synchra.importer.attribute.ReferenceImport"
								name="syn:SinglePart#catalog"
							>
								<value-transformer class="com.top_logic.synchra.importer.transformer.TLObjectTransformer"
									id-attribute="name"
									tl-class="syn:PartCatalog"
								/>
							</attribute>
							<attribute class="com.top_logic.synchra.importer.attribute.ReferenceImport"
								name="syn:SinglePart#company"
							>
								<value-transformer class="com.top_logic.synchra.importer.transformer.TLObjectTransformer"
									id-attribute="name"
									tl-class="syn:Company"
								/>
							</attribute>
						</attributes>
					</importer>
					<importer class="com.top_logic.synchra.importer.ProductImporter"
						id-attributes="name"
						tl-class="syn:Product"
					>
						<attributes>
							<attribute class="com.top_logic.synchra.importer.attribute.PropertyImport"
								name="syn:Product#name"
							/>
						</attributes>
					</importer>
					<importer
						id-attributes="name"
						tl-class="syn:Activity"
					>
						<attributes>
							<attribute class="com.top_logic.synchra.importer.attribute.PropertyImport"
								name="syn:Activity#name"
							/>
							<attribute class="com.top_logic.synchra.importer.attribute.PropertyImport"
								name="syn:Activity#costs"
							/>
						</attributes>
					</importer>
					<importer
						id-attributes="name"
						tl-class="risk:Risk"
					>
						<attributes>
							<attribute class="com.top_logic.synchra.importer.attribute.PropertyImport"
								name="risk:Risk#name"
							/>
							<attribute class="com.top_logic.synchra.importer.attribute.PropertyImport"
								name="risk:Risk#estimatedDamage"
							/>
							<attribute class="com.top_logic.synchra.importer.attribute.PropertyImport"
								name="risk:Risk#estimatedProbability"
							/>
						</attributes>
					</importer>
					<importer
						id-attributes="name"
						tl-class="syn:Problem"
					>
						<attributes>
							<attribute class="com.top_logic.synchra.importer.attribute.PropertyImport"
								name="syn:Problem#name"
							/>
							<attribute class="com.top_logic.synchra.importer.attribute.ReferenceImport"
								name="syn:Problem#solvingActivities"
							>
								<value-transformer class="com.top_logic.synchra.importer.transformer.TLObjectTransformer"
									id-attribute="name"
									tl-class="syn:Activity"
								/>
							</attribute>
							<attribute class="com.top_logic.synchra.importer.attribute.ReferenceImport"
								name="syn:Problem#components"
							>
								<value-transformer class="com.top_logic.synchra.importer.transformer.TLObjectTransformer"
									id-attribute="name"
									tl-class="syn:SinglePart"
								/>
							</attribute>
						</attributes>
					</importer>
					<importer
						id-attributes="consistsOf,used,rule,position"
						tl-class="syn:Connection"
					>
						<attributes>
							<attribute class="com.top_logic.synchra.importer.attribute.PropertyImport"
								name="syn:Connection#position"
							/>
							<attribute class="com.top_logic.synchra.importer.attribute.PropertyImport"
								name="syn:Connection#rule"
							/>
							<attribute class="com.top_logic.synchra.importer.attribute.ReferenceImport"
								name="syn:Connection#consistsOf"
							>
								<value-transformer class="com.top_logic.synchra.importer.transformer.TLObjectTransformer"
									create-tl-class="syn:ConstructionGroup"
									id-attribute="name"
									tl-class="syn:Component"
								/>
							</attribute>
							<attribute class="com.top_logic.synchra.importer.attribute.ReferenceImport"
								name="syn:Connection#used"
							>
								<value-transformer class="com.top_logic.synchra.importer.transformer.TLObjectTransformer"
									id-attribute="name"
									tl-class="syn:ConstructionGroup"
								/>
							</attribute>
						</attributes>
					</importer>
					
					
					<importer
						id-attributes="activity,kpi,valuated"
						tl-class="kpi:Valuation"
					>
						<attributes>
							<attribute class="com.top_logic.synchra.importer.attribute.PropertyImport"
								name="kpi:Valuation#value"
							/>
							<attribute class="com.top_logic.synchra.importer.attribute.ReferenceImport"
								name="kpi:Valuation#activity"
							>
								<value-transformer class="com.top_logic.synchra.importer.transformer.TLObjectTransformer"
									id-attribute="name"
									tl-class="syn:Activity"
								/>
							</attribute>
							<attribute class="com.top_logic.synchra.importer.attribute.ReferenceImport"
								name="kpi:Valuation#kpi"
							>
								<value-transformer class="com.top_logic.synchra.importer.transformer.TLObjectTransformer"
									id-attribute="name"
									tl-class="kpi:Kpi"
								/>
							</attribute>
							<attribute class="com.top_logic.synchra.importer.attribute.ReferenceImport"
								name="kpi:Valuation#valuated"
							>
								<value-transformer class="com.top_logic.synchra.importer.transformer.TLObjectTransformer"
									id-attribute="name"
									tl-class="kpi:KpiAware"
								/>
							</attribute>
						</attributes>
					</importer>

					
				</importers>
			</button>
		</buttons>
	</arguments>
</config:template-call>