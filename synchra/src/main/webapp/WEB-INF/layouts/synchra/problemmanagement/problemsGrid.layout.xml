		defaultColumns="executionNumber,name,description,affects,pStatus,solution,createdBy,createdByContact,executionState"
		type="synchra.Problemmanagement:Problem"
	>
		<dialogs>
			<layout-reference resource="synchra/problemmanagement/detailedDEscriptionOfProblems/dialog.layout.xml"/>
		</dialogs>
