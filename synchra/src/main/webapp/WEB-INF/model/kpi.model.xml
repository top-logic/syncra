<?xml version="1.0" encoding="utf-8" ?>

<model xmlns="http://www.top-logic.com/ns/dynamic-types/6.0">
	<module name="kpi">
		<interface name="AbstractValuation">
			<generalizations>
				<generalization type="tl.model:TLObject"/>
			</generalizations>
			<attributes>
				<reference name="kpi"
					kind="forwards"
					mandatory="true"
					navigate="true"
					type="Kpi"
				/>
				<property name="value"
					mandatory="true"
					type="tl.core:Double"
				/>
				<reference name="valuated"
					inverse-reference="valuations"
					kind="forwards"
					mandatory="true"
					navigate="true"
					type="KpiAware"
				/>
			</attributes>
		</interface>
		<class name="Valuation">
			<generalizations>
				<generalization type="AbstractValuation"/>
			</generalizations>
			<attributes>
				<reference name="activity"
					aggregate="true"
					inverse-reference="valuations"
					kind="backwards"
					navigate="true"
					type="syn:Activity"
				/>
			</attributes>
		</class>
		<class name="Kpi">
			<generalizations>
				<generalization type="tl.model:TLObject"/>
			</generalizations>
			<attributes>
				<property name="name"
					type="tl.core:String"
				/>
				<reference name="unit"
					kind="forwards"
					mandatory="true"
					navigate="true"
					type="tl.units:AbstractUnit"
				/>
			</attributes>
		</class>
		<interface name="KpiAware">
			<generalizations>
				<generalization type="tl.model:TLObject"/>
			</generalizations>
			<attributes>
				<reference name="valuations"
					inverse-reference="valuated"
					kind="backwards"
					multiple="true"
					navigate="true"
					type="AbstractValuation"
				/>
			</attributes>
		</interface>
	</module>
</model>