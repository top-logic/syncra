<?xml version="1.0" encoding="utf-8" ?>

<model xmlns="http://www.top-logic.com/ns/dynamic-types/6.0">
	<module name="kpi">
		<interface name="AbstractValuation">
			<generalizations>
				<generalization type="tl.model:TLObject"/>
			</generalizations>
			<attributes>
				<reference name="kpi"
					kind="forwards"
					mandatory="true"
					navigate="true"
					type="Kpi"
				>
					<annotations>
						<options>
							<options-by-expression>
								<function><![CDATA[v -> {
    val = $v.get(`kpi:AbstractValuation#valuated`);
    if($val==null,
        all(`kpi:Kpi`),
        if($val.instanceOf(`risk:Risk`),
            all(`kpi:Kpi`).filter( k -> $k.get(`kpi:Kpi#name`).equals("Schaden") || $k.get(`kpi:Kpi#name`).equals("ETW")),
            all(`kpi:Kpi`).filter( k -> $k.get(`kpi:Kpi#name`).equals("Preis") || $k.get(`kpi:Kpi#name`).equals("Gewicht")),
         )
    )     
}]]></function>
							</options-by-expression>
						</options>
					</annotations>
				</reference>
				<property name="value"
					mandatory="true"
					type="tl.core:Double"
				/>
				<reference name="valuated"
					inverse-reference="valuations"
					kind="forwards"
					mandatory="true"
					navigate="true"
					type="KpiAware"
				>
					<annotations>
						<options>
							<options-by-expression>
								<function><![CDATA[v -> {
    kpi = $v.get(`kpi:AbstractValuation#kpi`);
    if($kpi==null,
        all(`kpi:KpiAware`),
        if( $kpi.get(`kpi:Kpi#name`).equals("Schaden") || $kpi.get(`kpi:Kpi#name`).equals("ETW"),
            all(`risk:Risk`),
            all(`syn:Component`)
         )
    )    
}
]]></function>
							</options-by-expression>
						</options>
					</annotations>
				</reference>
			</attributes>
		</interface>
		<class name="Valuation">
			<generalizations>
				<generalization type="AbstractValuation"/>
			</generalizations>
			<attributes>
				<reference name="activity"
					aggregate="true"
					inverse-reference="valuations"
					kind="backwards"
					navigate="true"
					type="syn:Activity"
				/>
			</attributes>
		</class>
		<class name="Kpi">
			<generalizations>
				<generalization type="tl.model:TLObject"/>
			</generalizations>
			<attributes>
				<property name="name"
					type="tl.core:String"
				/>
				<reference name="unit"
					kind="forwards"
					mandatory="true"
					navigate="true"
					type="tl.units:AbstractUnit"
				/>
			</attributes>
		</class>
		<interface name="KpiAware">
			<generalizations>
				<generalization type="tl.model:TLObject"/>
			</generalizations>
			<attributes>
				<reference name="valuations"
					inverse-reference="valuated"
					kind="backwards"
					multiple="true"
					navigate="true"
					type="AbstractValuation"
				/>
			</attributes>
		</interface>
	</module>
</model>