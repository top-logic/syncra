<?xml version="1.0" encoding="utf-8" ?>

<model xmlns="http://www.top-logic.com/ns/dynamic-types/6.0">
	<module name="kpi">
		<interface name="AbstractValuation">
			<generalizations>
				<generalization type="tl.model:TLObject"/>
			</generalizations>
			<attributes>
				<reference name="kpi"
					kind="forwards"
					mandatory="true"
					navigate="true"
					type="Kpi"
				>
					<annotations>
						<options>
							<options-by-expression>
								<function><![CDATA[v -> {
    val = $v.get(`kpi:AbstractValuation#valuated`);
    if($val==null,
        all(`kpi:Kpi`),
        if($val.instanceOf(`risk:Risk`),
            all(`kpi:Kpi`).filter( k -> $k.get(`kpi:Kpi#name`).equals("Schaden") || $k.get(`kpi:Kpi#name`).equals("ETW")),
            all(`kpi:Kpi`).filter( k -> $k.get(`kpi:Kpi#name`).equals("Preis") || $k.get(`kpi:Kpi#name`).equals("Gewicht")),
         )
    )     
}]]></function>
							</options-by-expression>
						</options>
					</annotations>
				</reference>
				<property name="value"
					mandatory="true"
					type="tl.core:Double"
				/>
				<reference name="valuated"
					inverse-reference="valuations"
					kind="forwards"
					mandatory="true"
					navigate="true"
					type="KpiAware"
				>
					<annotations>
						<options>
							<options-by-expression>
								<function><![CDATA[v -> {
    kpi = $v.get(`kpi:AbstractValuation#kpi`);
    if($kpi==null,
        all(`kpi:KpiAware`),
        if( $kpi.get(`kpi:Kpi#name`).equals("Schaden") || $kpi.get(`kpi:Kpi#name`).equals("ETW"),
            all(`risk:Risk`),
            all(`syn:Component`)
         )
    )    
}
]]></function>
							</options-by-expression>
						</options>
					</annotations>
				</reference>
			</attributes>
		</interface>
		<class name="Valuation">
			<generalizations>
				<generalization type="AbstractValuation"/>
			</generalizations>
			<attributes>
				<reference name="activity"
					aggregate="true"
					inverse-reference="valuations"
					kind="backwards"
					navigate="true"
					type="syn:Activity"
				/>
			</attributes>
		</class>
		<class name="Anzahl">
			<generalizations>
				<generalization type="tl.model:TLObject"/>
			</generalizations>
			<annotations>
				<form-definition>
					<form>
						<field
							attribute="count"
							fullQualifiedName="kpi:Anzahl#count"
							type="tl.core:Integer"
						/>
					</form>
				</form-definition>
			</annotations>
			<attributes>
				<property name="count"
					type="tl.core:Integer"
				>
					<annotations>
						<default-value>
							<int value="30"/>
						</default-value>
						<value-range
							max="500.0"
							min="2.0"
						/>
					</annotations>
				</property>
			</attributes>
		</class>
		<class name="Kpi">
			<generalizations>
				<generalization type="tl.model:TLObject"/>
			</generalizations>
			<attributes>
				<property name="name"
					type="tl.core:String"
				/>
				<reference name="unit"
					kind="forwards"
					mandatory="true"
					navigate="true"
					type="tl.units:AbstractUnit"
				/>
			</attributes>
		</class>
		<interface name="KpiAware">
			<generalizations>
				<generalization type="tl.model:TLObject"/>
			</generalizations>
			<attributes>
				<reference name="valuations"
					inverse-reference="valuated"
					kind="backwards"
					multiple="true"
					navigate="true"
					type="AbstractValuation"
				/>
			</attributes>
		</interface>
		<class name="Progress">
			<generalizations>
				<generalization type="tl.model:TLObject"/>
			</generalizations>
			<annotations>
				<form-definition>
					<form>
						<group>
							<field
								attribute="componentOld"
								fullQualifiedName="kpi:Progress#componentOld"
								type="syn:Component"
							/>
							<field
								attribute="priceOld"
								fullQualifiedName="kpi:Progress#priceOld"
								type="tl.core:Double"
							/>
							<field
								attribute="prognoseOld"
								fullQualifiedName="kpi:Progress#prognoseOld"
								type="tl.core:Double"
							/>
							<label key="dynamic.95fa19cb-c530-4413-80c8-4ee24fb7f304">
								<de>Datum 1</de>
							</label>
						</group>
						<group>
							<field
								attribute="componentNew"
								fullQualifiedName="kpi:Progress#componentNew"
								type="syn:Component"
							/>
							<field
								attribute="priceNew"
								fullQualifiedName="kpi:Progress#priceNew"
								type="tl.core:Double"
							/>
							<field
								attribute="prognoseNew"
								fullQualifiedName="kpi:Progress#prognoseNew"
								type="tl.core:Double"
							/>
							<label key="dynamic.1cdc5498-6bd0-4e2d-8fc6-0bd7f12b7931">
								<en>Date 2</en>
								<de>Datum 2</de>
							</label>
						</group>
						<field
							attribute="priceDifference"
							fullQualifiedName="kpi:Progress#priceDifference"
							type="tl.core:Double"
						/>
						<field
							attribute="prognoseDifference"
							fullQualifiedName="kpi:Progress#prognoseDifference"
							type="tl.core:Double"
						/>
					</form>
				</form-definition>
			</annotations>
			<attributes>
				<property name="dateOld"
					type="tl.core:DateTime"
				/>
				<property name="dateNew"
					type="tl.core:DateTime"
				/>
				<property name="priceOld"
					type="tl.core:Double"
				>
					<annotations>
						<storage-algorithm>
							<query>
								<expr><![CDATA[sel -> {comp = $sel.get(`kpi:Progress#componentOld`);
        $comp==null ? 0 : $comp.get(`syn:Component#priceAfterActivities`);
    }]]></expr>
							</query>
						</storage-algorithm>
						<format>
							<currency
								currency="EUR"
								pattern="#0.00 €"
							/>
						</format>
					</annotations>
				</property>
				<property name="priceNew"
					type="tl.core:Double"
				>
					<annotations>
						<storage-algorithm>
							<query>
								<expr><![CDATA[sel -> {comp = $sel.get(`kpi:Progress#componentNew`);
        $comp==null ? 0 : $comp.get(`syn:Component#priceAfterActivities`);
    }]]></expr>
							</query>
						</storage-algorithm>
						<format>
							<currency
								currency="EUR"
								pattern="#0.00 €"
							/>
						</format>
					</annotations>
				</property>
				<reference name="component"
					kind="forwards"
					type="syn:Component"
				/>
				<reference name="componentOld"
					kind="forwards"
					navigate="true"
					type="syn:Component"
				>
					<annotations>
						<storage-algorithm>
							<query>
								<expr><![CDATA[sel -> {date = $sel.get(`kpi:Progress#dateOld`);
        revision = $date==null ?  currentRevision() : revisionAt($date);
        $sel.get(`kpi:Progress#component`).inRevision($revision);
        }]]></expr>
							</query>
						</storage-algorithm>
					</annotations>
				</reference>
				<reference name="componentNew"
					kind="forwards"
					navigate="true"
					type="syn:Component"
				>
					<annotations>
						<storage-algorithm>
							<query>
								<expr><![CDATA[sel -> {date = $sel.get(`kpi:Progress#dateNew`);
        revision = $date==null ?  currentRevision() : revisionAt($date);
        $sel.get(`kpi:Progress#component`).inRevision($revision);
        }]]></expr>
							</query>
						</storage-algorithm>
					</annotations>
				</reference>
				<property name="priceDifference"
					type="tl.core:Double"
				>
					<annotations>
						<storage-algorithm>
							<query expr="p -> $p.get(`kpi:Progress#priceNew`)- $p.get(`kpi:Progress#priceOld`)"/>
						</storage-algorithm>
						<format>
							<currency
								currency="EUR"
								pattern="#0.00 €"
							/>
						</format>
					</annotations>
				</property>
				<property name="prognoseOld"
					type="tl.core:Double"
				>
					<annotations>
						<storage-algorithm>
							<query>
								<expr><![CDATA[sel -> {comp = $sel.get(`kpi:Progress#componentOld`);
        $comp==null ? 0 : $comp.get(`syn:Component#priceAfterActivities`);
    }]]></expr>
							</query>
						</storage-algorithm>
						<format>
							<currency
								currency="EUR"
								pattern="#0.00 €"
							/>
						</format>
					</annotations>
				</property>
				<property name="prognoseNew"
					type="tl.core:Double"
				>
					<annotations>
						<storage-algorithm>
							<query>
								<expr><![CDATA[sel -> {comp = $sel.get(`kpi:Progress#componentNew`);
        $comp==null ? 0 : $comp.get(`syn:Component#prognose`);
    }]]></expr>
							</query>
						</storage-algorithm>
						<format>
							<currency
								currency="EUR"
								pattern="#0.00 €"
							/>
						</format>
					</annotations>
				</property>
				<property name="prognoseDifference"
					type="tl.core:Double"
				>
					<annotations>
						<format>
							<currency
								currency="EUR"
								pattern="#0.00 €"
							/>
						</format>
						<storage-algorithm>
							<query expr="p -> $p.get(`kpi:Progress#prognoseNew`)- $p.get(`kpi:Progress#prognoseOld`)"/>
						</storage-algorithm>
					</annotations>
				</property>
			</attributes>
		</class>
		<class name="TwoDates">
			<generalizations>
				<generalization type="tl.model:TLObject"/>
			</generalizations>
			<attributes>
				<property name="dateOld"
					type="tl.core:DateTime"
				/>
				<property name="dateNew"
					type="tl.core:DateTime"
				/>
			</attributes>
		</class>
	</module>
</model>