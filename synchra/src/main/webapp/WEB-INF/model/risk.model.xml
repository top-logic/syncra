					<annotations>
						<reference-display value="radio-inline"/>
					</annotations>
				</reference>
			</attributes>
		</class>
		<class name="RiskKind">
			<generalizations>
				<generalization type="tl.model:TLObject"/>
			</generalizations>
			<attributes>
				<property name="name"
					mandatory="true"
					type="tl.model.i18n:I18NString"
				/>
				<property name="description"
					type="tl.model.i18n:I18NHtml"
				/>
			</attributes>
		</class>
	</module>
</model>