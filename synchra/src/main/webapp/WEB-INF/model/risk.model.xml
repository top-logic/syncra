						<field
							attribute="name"
							fullQualifiedName="risk:AmountOfLoss#name"
							type="tl.model.i18n:I18NString"
						/>
						<field
							attribute="min"
							fullQualifiedName="risk:AmountOfLoss#min"
							type="tl.core:Integer"
