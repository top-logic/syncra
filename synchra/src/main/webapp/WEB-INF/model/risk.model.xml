							fullQualifiedName="risk:AmountOfLoss#max"
							type="tl.core:Integer"
						/>
						<field
							attribute="description"
							fullQualifiedName="risk:AmountOfLoss#description"
							type="tl.model.i18n:I18NHtml"
						/>
					</form>
				</form-definition>
			</annotations>
			<attributes>
				<property name="name"
					mandatory="true"
					type="tl.model.i18n:I18NString"
