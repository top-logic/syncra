<?xml version="1.0" encoding="utf-8" ?>

<model xmlns="http://www.top-logic.com/ns/dynamic-types/6.0">
	<module name="synchra.Changemanagement">
		<enum name="ChangeTaskStatus">
			<classifier name="new"/>
			<classifier name="inPreparation"/>
			<classifier name="inEvaluation"/>
			<classifier name="approved"/>
			<classifier name="ready"/>
			<classifier name="terminated"/>
			<classifier name="rejected"/>
		</enum>
		<interface name="ChangeTask">
			<generalizations>
				<generalization type="tl.model:TLObject"/>
			</generalizations>
			<attributes>
				<reference name="taskAffectsComponent"
					kind="forwards"
					multiple="true"
					navigate="true"
					type="synchra.Bom:Component"
				/>
				<property name="name"
					mandatory="true"
					type="tl.core:String"
				/>
				<property name="financialImpact"
					type="tl.core:Float"
				>
					<annotations>
						<format>
							<currency
								currency="EUR"
								pattern="#0.00 â‚¬"
							/>
						</format>
					</annotations>
				</property>
				<property name="description"
					type="tl.model.wysiwyg:Html"
				/>
				<reference name="taskStatus"
					kind="forwards"
					navigate="true"
					type="ChangeTaskStatus"
				/>
			</attributes>
		</interface>
		<class name="FinancialTask">
			<generalizations>
				<generalization type="ChangeTask"/>
				<generalization type="tl.bpe.execution:ProcessExecution"/>
			</generalizations>
		</class>
		<class name="OrgTask">
			<generalizations>
				<generalization type="ChangeTask"/>
				<generalization type="tl.bpe.execution:ProcessExecution"/>
			</generalizations>
		</class>
		<class name="TechnicalTask">
			<generalizations>
				<generalization type="tl.bpe.execution:ProcessExecution"/>
				<generalization type="ChangeTask"/>
			</generalizations>
		</class>
		<class name="NeedForChanges">
			<generalizations>
				<generalization type="tl.bpe.execution:ProcessExecution"/>
			</generalizations>
			<attributes>
				<property name="name"
					type="tl.core:String"
				/>
				<property name="description"
					type="tl.model.wysiwyg:Html"
				/>
				<reference name="changeTasks"
					composite="true"
					kind="forwards"
					multiple="true"
					navigate="true"
					type="ChangeTask"
				/>
				<reference name="isProblem"
					kind="forwards"
					multiple="true"
					navigate="true"
					type="synchra.Problemmanagement:Problem"
				/>
				<reference name="isARisk"
					kind="forwards"
					multiple="true"
					navigate="true"
					type="synchra.Riskmanagement:Risk"
				/>
			</attributes>
		</class>
	</module>
</model>